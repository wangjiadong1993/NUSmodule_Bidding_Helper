<html ng-app = 'modules'>
	<head>
		<title> 
			Module 
		</title>

		<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.19/angular.min.js"></script>
		<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.19/angular.js"></script>
		<script src='/assets/modules.js'></script>
		<link rel="stylesheet" href="/assets/web.css.scss">	

	</head>
	<body ng-controller='controller'>
		<div>
			<table>
				<tr>
					<td><a href="#">Module Bidding Helper</a></td>
					<td><a href="#"> Forum </a></td>
					<td><a href="#">File Sharing</a></td>
				</tr>

			</table>

		</div>
		{{namespace.test}}
		<div>
			<input type='text' ng-model="namespace.input"> 
			<button ng-click='namespace.add_module()'>Confirm</button>
			<ul >
				<li ng-repeat="mod in namespace.modules">
					Name: {{mod.module.name}}  Code: {{mod.module.code}} WorkLoad: {{mod.module.workload}}
					<ul >Lecture:
					<li ng-repeat="lec in mod['lectures']">
						{{lec['daytext']}} {{lec['starttime']}} {{lect['endtime']}} {{lec['venue']}} {{lec['weektext']}} {{lec['classnum']}}
					</li>
					</ul>
					<ul >Tutorial:
					<li ng-repeat="lec in mod['tutorials']">
						{{lec['daytext']}} {{lec['starttime']}} {{lect['endtime']}} {{lec['venue']}} {{lec['weektext']}} {{lec['classnum']}}
					</li>
					</ul>
				</li>
				

			</ul>
		</div>
		<div>
			<table>
				<tr>
					<td>Name</td>
				</tr>
			</table>

		</div>
	</body>
</html>

